<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <TextView 
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textSize="20sp"
        android:padding="20dp"
        />
    
    <EditText 
        android:id="@+id/collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice"
        android:lines="1"
        android:hint="@string/hint_collection_name"
        android:inputType="textShortMessage|textCapWords|textNoSuggestions"
        />
    
    <TextView 
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_name"
        />
    
    <Button
        android:id="@+id/import_collection"
        android:text="@string/button_import_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
